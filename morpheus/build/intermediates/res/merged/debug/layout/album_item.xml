<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
     >

    <ImageView
        android:id="@+id/listalbumcover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@+string/albumumage"
        android:scaleType="centerCrop"
        android:src="@drawable/stub" />
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:paddingTop="5dp"
    	android:paddingBottom="5dp"
    	android:paddingLeft="10dp" >
        
   <com.ephod.morpheus.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="18sp"
        android:text="@+string/AlbumName"
        android:id="@+id/listablumname" />
      
   <com.ephod.morpheus.CustomTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#fff"
        android:text="@+string/AlbumArtist"
        android:id="@+id/listablumartist"
         />
        
    </LinearLayout>
    

</LinearLayout>
